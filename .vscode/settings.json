{
  "cSpell.enabled": true,
  "cSpell.checkLimit": 500,
  "cSpell.numSuggestions": 8,
  "cSpell.minWordLength": 4,
  "cSpell.maxNumberOfProblems": 100,
  "cSpell.enabledFileTypes": {
    "markdown": true,
    "python": true,
    "json": true,
    "yaml": true,
    "plaintext": true
  },
  "cSpell.ignorePaths": [
    "node_modules/**",
    ".git/**",
    "dist/**", 
    "build/**",
    "coverage/**",
    "**/*.log",
    "**/*.pyc",
    "**/__pycache__/**",
    "**/.pytest_cache/**",
    "**/.mypy_cache/**",
    "**/.ruff_cache/**",
    "uv.lock",
    "**/*.lock",
    "**/*.min.js",
    "**/*.min.css",
    "outputs/**",
    "temp/**",
    "converted_markdown/**",
    "examples/outputs/**",
    ".gitignore",
    "vscode-chat-code-block:**"
  ],
  "cSpell.allowCompoundWords": true,
  "cSpell.diagnosticLevel": "Hint",
  "cSpell.showCommandsInEditorContextMenu": true,
  "cSpell.showStatus": true,
  "cSpell.spellCheckDelayMs": 50,
  "markdownlint.config": {
    "MD022": false,
    "MD031": false,
    "MD032": false,
    "MD040": false,
    "MD049": false,
    "MD036": false,
    "default": true
  },
  "files.associations": {
    "*.md": "markdown"
  },
  "powershell.scriptAnalysis.settingsPath": ".vscode/PSScriptAnalyzerSettings.psd1",
  "powershell.scriptAnalysis.enable": true
}
